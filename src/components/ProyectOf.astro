---
import Image from "astro/components/Image.astro"
import vasconezLogo from '../assets/logos/vasconezLogo.png'
import mantaHillsLogo from '../assets/logos/logoCompleto.png'
---
<section class="container-of">
    <span>Un proyecto de:</span>
    <div class="sponsor-container">
        <Image src={vasconezLogo} alt="Vasconez Paredes - Ingienería y Construcción"/>
        <Image src={mantaHillsLogo} alt="Manta Hills - Contruye tu futuro, invierte en tu futuro"/>
    </div>
</section>
<style scoped>
    .container-of{
        padding: 2em;
        background-color: #F7F7F9;
    }
    .sponsor-container{
        display: flex;
        justify-content: center;
        gap: 5em;
        align-items: center;  
    }
    .sponsor-container img{
        height: 150px;
        width: auto;
        filter: grayscale(1);
        transition: transform .3s ease;
    }
    .sponsor-container img:hover{
        transform: scale(1.1);
        filter: grayscale(0);
    }
    @media (max-width:690px) {
        .sponsor-container{
            flex-direction: column;
            gap: 2em;
        }
    }
    @media (max-width:425px) {
        .sponsor-container img{
            width: 80vw;
            height: auto;
        }

    }
</style>